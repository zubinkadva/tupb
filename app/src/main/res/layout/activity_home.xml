<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Home"
    android:layout_gravity="center_vertical|center_horizontal">




    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:clickable="true"
        android:layout_marginBottom="5sp"
        android:layout_marginLeft="2sp"
        android:layout_marginRight="5sp"
        android:layout_marginTop="2sp"
        android:id="@+id/linearLayout">
    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageButton
            android:layout_height="match_parent"
            android:layout_width="200dp"
            android:layout_weight="1"
            android:id="@+id/imageButton1"
            android:background="@drawable/img_btn_ad"
            android:layout_marginBottom="5sp"
            android:layout_marginLeft="2sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="0sp"/>
        <ImageButton
            android:layout_height="match_parent"
            android:layout_width="200dp"
            android:layout_weight="1"
            android:layout_marginBottom="5sp"
            android:layout_marginLeft="2sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="0sp"
            android:id="@+id/imageButton2"
            android:background="@drawable/img_btn_view"/>
        </LinearLayout>
    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="0.23"
        android:orientation="horizontal">
        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:clickable="false"
            android:textColor="@color/white"
            android:text="Add Contact"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginBottom="5sp"
            android:layout_marginLeft="25sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="0sp">
        </TextView>

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:clickable="false"
            android:textColor="@color/white"
            android:text="View Contact"
            android:textSize="20dp"

            android:textStyle="bold"
            android:layout_marginBottom="5sp"
            android:layout_marginLeft="-50sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="0sp">
        </TextView>
        </LinearLayout>
    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:layout_height="match_parent"
            android:layout_width="200dp"
            android:layout_weight="1"
            android:layout_marginBottom="5sp"
            android:layout_marginLeft="2sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="0sp"
            android:id="@+id/imageButton3"
            android:background="@drawable/img_btn_serach"/>


        <ImageButton
            android:layout_height="match_parent"
            android:layout_width="200dp"
            android:layout_weight="1"
            android:layout_marginBottom="5sp"
            android:layout_marginLeft="2sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="0sp"
            android:id="@+id/imageButton5"
            android:background="@drawable/img_btn_update"/>
    </LinearLayout>
        <LinearLayout
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="0.23"
            android:orientation="horizontal">
            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:clickable="false"
                android:textColor="@color/white"
                android:text="Search Contact"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginBottom="5sp"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="5sp"
                android:layout_marginTop="0sp">
            </TextView>

            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:clickable="false"
                android:textColor="@color/white"
                android:text="Update Contact"
                android:textSize="20dp"

                android:textStyle="bold"
                android:layout_marginBottom="5sp"
                android:layout_marginLeft="-50sp"
                android:layout_marginRight="5sp"
                android:layout_marginTop="0sp">
            </TextView>
        </LinearLayout>
    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageButton
            android:layout_height="match_parent"
            android:layout_width="200dp"
            android:layout_weight="1"
            android:layout_marginBottom="5sp"
            android:layout_marginLeft="2sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="0sp"
            android:id="@+id/imageButton6"
            android:background="@drawable/img_btn_filter"/>
        <ImageButton
            android:layout_height="match_parent"
            android:layout_width="200dp"
            android:layout_weight="1"
            android:layout_marginLeft="2sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="0sp"
            android:id="@+id/imageButton7"
            android:background="@drawable/img_btn_exit"
            android:contentDescription="a" />
</LinearLayout>
        <LinearLayout
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="0.23"
            android:orientation="horizontal">
            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:clickable="false"
                android:textColor="@color/white"
                android:text="Filter Contact"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginBottom="5sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="5sp"
                android:layout_marginTop="0sp">
            </TextView>

            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:clickable="false"
                android:textColor="@color/white"
                android:text="Exit"
                android:textSize="20dp"

                android:textStyle="bold"
                android:layout_marginBottom="5sp"
                android:layout_marginLeft="-10sp"
                android:layout_marginRight="5sp"
                android:layout_marginTop="0sp">
            </TextView>
        </LinearLayout>
    </LinearLayout>




</RelativeLayout>
